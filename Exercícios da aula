Exercicio 1
n1 = int(input("Digite um numero"))

if n1 % 2 == 0:
    print("O numero digita é par")
else:
    print("O numero digitado é impar")

Exercicio 2
n1 = int(input("Digite um numero"))
n2 = int(input("Digite outro numero"))

if n1 > n2:
    print("\nO primeiro numero é o maior")
else:
    print("\nO segundo numero é o maior")

Exercicio 3
n1 = int(input("Digite um numero"))

if n1 < 0:
    print("\nO numero é negativo")
elif n1 > 0:
    print("\nO numero é positivo")
else:
    print("\nO numero digitado é 0")

Exercicio 4
idade = int(input("Digite sua idade"))

if idade < 18:
    print("\nMenor de idade")
elif 18 <= idade < 65:
    print("\nAdulto") 
else:
    print("\nidoso")

Exercicio 5
